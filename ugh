local Atlas = loadstring(game:HttpGet("https://siegehub.net/Atlas_v2.lua"))()

local Window = Atlas:CreateWindow({
    Name = "Awaken#6969 | AltraxsHub";
    Version = "v1.0";
    Bind = "LeftAlt";
})

local Spin = Window:CreatePage("Spin")
local Spin = Spin:CreateLeftSection("Spin")

local function autospin()
    local args = {
        [1] = "FruitsHandler",
        [2] = "Spin",
        [3] = {
            ["Type"] = "Fast"
        }
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Replicator"):InvokeServer(unpack(args))
    
end
local fruits = {
    'Dough',
    'Dragon',
    'Rubber',
    'Darkness',
    'Barrier',
    'Phoenix',
    'Quake',
    'Paw',
    'Flame',
    'TSRubber',
    'Magma',
}

Spin:CreateDropdown("Slot", {
    Name = "select cum Slot"; 
    Values = {1,2,3,4,5};
    SelectType = "Multi";
    Callback = function(selectedele)   
        slot = selectedele
    end;
})


Spin:CreateDropdown("mySelecdownssss", {
    Name = "select cum fruits"; 
    Values = fruits;
    SelectType = "Multi";
    Callback = function(selectedele)   
        sel = selectedele
    end;
})

Spin:CreateToggle("myTogglessssss",{
    Name = "Roll for Selected Cum Fruit";
    Callback = function(Value)
        getgenv().AutoSpin = Value
        while getgenv().AutoSpin do task.wait()
           autospin()
           if game:GetService("Players").LocalPlayer.MAIN_DATA.Slots[2].Value == sel then 
              getgenv().AutoSpin = false
              rconsoleinfo('Got selected fruit: '..sel)
              break
           end   
       end
    end;
    Default = false;
})
local url = nil
Spin:CreateTextbox("Spin",{
    Name = "Webhook";
    DefaultText = "Enter Webhook";
    PlaceholderText = "Enter Webhook";
    Callback = function(inputtedText)
        url = inputtedText
    end;
    ClearTextOnFocus = true;
    OnlyCallbackOnEnterPressed = true;
})

Spin:CreateToggle("myTogglessssssssss",{
    Name = "Webhook Notification";
    Callback = function(Value)
        getgenv().AutoSpin2 = Value
        while getgenv().AutoSpin2 do task.wait()
            if game:GetService("Players").LocalPlayer.MAIN_DATA.Slots[2].Value == sel then 
                local data = {
                   ["content"] = " @everyone",
                   username = 'Awaken#6969',
                   ["embeds"] = {
                       {
                           ["title"] = "**Got Selected Fruit:**",
                           ["description"] = "->"..sel,
                           ["type"] = "rich",
                           ["color"] = tonumber(0x7269da),
                       }
                   }
                }
                local newdata = game:GetService("HttpService"):JSONEncode(data)
                
                local headers = {
                   ["content-type"] = "application/json"
                }
                request = http_request or request or HttpPost or syn.request
                local abcdef = {Url = url, Body = newdata, Method = "POST", Headers = headers}
                request(abcdef)
                
                break
            end   
       end
    end;
    Default = false;
})
